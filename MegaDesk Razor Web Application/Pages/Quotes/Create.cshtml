@page
@model MegaDesk_Razor_Web_Application.Pages.Quotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quote.CustomerName" class="control-label"></label>
                <input asp-for="Quote.CustomerName" class="form-control" />
                <span asp-validation-for="Quote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DeskWidth" class="control-label"></label>
                <input asp-for="Quote.DeskWidth" class="form-control" />
                <span asp-validation-for="Quote.DeskWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.DeskHeight" class="control-label"></label>
                <input asp-for="Quote.DeskHeight" class="form-control" />
                <span asp-validation-for="Quote.DeskHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.MaterialOptions" class="control-label"></label>
                <select asp-for="Quote.MaterialOptions" class="form-control">
                    <option disabled selected>Select an Option</option>
                    <option value="200">Oak</option>
                    <option value="100">Laminate</option>
                    <option value="50">Pine</option>
                    <option value="300">Rosewood</option>
                    <option value="125">Veneer</option>
                </select>
                <!-- <input asp-for="Quote.MaterialOptions" class="form-control" /> -->
                <span asp-validation-for="Quote.MaterialOptions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.NumberDrawers" class="control-label"></label>
                <input asp-for="Quote.NumberDrawers" class="form-control" />
                <span asp-validation-for="Quote.NumberDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.ProductionTime" class="control-label"></label>
                <input asp-for="Quote.ProductionTime" class="form-control" />
                <span asp-validation-for="Quote.ProductionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.Date" class="control-label"></label>
                <input asp-for="Quote.Date" class="form-control" />
                <span asp-validation-for="Quote.Date" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
