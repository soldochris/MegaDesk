@model MegaDesk_Razor_Web_Application.Pages.Quotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].DeskWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].DeskHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].MaterialOptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].NumberDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].ProductionTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Quote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialOptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberDrawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
